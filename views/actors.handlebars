<h3>This will show the current table of actors</h3>
<table>
    <caption>List of Actors</caption>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Country</th>
    </tr>
    {{#if results}}
    {{#each results}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.age}}</td>
        <td>{{this.name}}</td>
    </tr>
    {{/each}}
    {{/if}}
</table>
