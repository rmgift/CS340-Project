<h2>Input A New Country:</h2>
<form id="newCountry" action="/insert_country" method="post">
    	<div>
        	<label class="inputLabel">Name:</label>
        	<input class="userInput" type="text" name="name" id="name">
    	</div>
    	<br />
    	<div>
        	<label class="inputLabel">Continent:</label>
        	<select class="userInput" name="continent" id="continent">
			<option value="North America">North America</option>
			<option value="South America">South America</option>
			<option value="Europe">Europe</option>
			<option value="Asia">Asia</option>
			<option value="Africa">Africa</option>
			<option value="Oceania">Oceania</option>
			<option value="Antartica">Antartica</option>
		</select>
	</div>
	<br />
	<div>
		<label class="inputLabel">Population:</label>
		<input class="userInput" type="number" name="population" id="population">
	</div>
	<br />
	<div>
		<input type="submit" name="AddCountry" value="AddCountry" id="postNewCountry">
	</div>
</form>

